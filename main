        TextXAlignment = Enum.TextXAlignment.Left,
    })

    local scriptsList = new("ScrollingFrame", {
        Parent = p,
        Position = UDim2.new(0, 20, 0, 52),
        Size = UDim2.new(1, -60, 1, -80),
